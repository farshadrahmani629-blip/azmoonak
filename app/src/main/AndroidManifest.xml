<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.examapp">

    <!-- ===============================
         Permissions
         =============================== -->
    <!-- اینترنت -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ذخیره‌سازی -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- برای Android 13 و بالاتر -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <!-- PDF و فایل‌ها -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- ویک‌فای -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- برای تشخیص نسخه Pro -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- ===============================
         Application Configuration
         =============================== -->
    <application
        android:name=".ExamApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- ==================== ACTIVITIES ==================== -->

        <!-- فعالیت اصلی -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deeplink support -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="azmoonak-edu.ir"
                    android:pathPrefix="/exam/" />
            </intent-filter>
        </activity>

        <!-- صفحه آزمون -->
        <activity
            android:name=".ui.exam.ExamActivity"
            android:exported="false"
            android:label="آزمون"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- صفحه نتایج -->
        <activity
            android:name=".ui.result.ResultActivity"
            android:exported="false"
            android:label="نتایج آزمون"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- PDF Viewer -->
        <activity
            android:name=".ui.pdf.PdfViewerActivity"
            android:exported="false"
            android:label="مشاهده PDF"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- PDF Generator (Service) -->
        <activity
            android:name=".ui.pdf.PdfGeneratorActivity"
            android:exported="false"
            android:label="تولید PDF"
            android:theme="@style/Theme.ExamApp.Transparent"
            android:screenOrientation="portrait" />

        <!-- صفحه پروفایل -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:label="پروفایل"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- صفحه تنظیمات -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="تنظیمات"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- صفحه خرید نسخه Pro -->
        <activity
            android:name=".ui.store.StoreActivity"
            android:exported="false"
            android:label="خرید نسخه Pro"
            android:theme="@style/Theme.ExamApp.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- ==================== SERVICES ==================== -->

        <!-- سرویس دانلود آزمون‌ها -->
        <service
            android:name=".service.DownloadService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="dataSync" />

        <!-- سرویس اعلان‌ها -->
        <service
            android:name=".service.NotificationService"
            android:exported="false"
            android:enabled="true" />

        <!-- ==================== RECEIVERS ==================== -->

        <!-- دریافت‌کننده وضعیت شبکه -->
        <receiver
            android:name=".receiver.NetworkChangeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- دریافت‌کننده تکمیل دانلود -->
        <receiver
            android:name=".receiver.DownloadCompleteReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <!-- ==================== PROVIDERS ==================== -->

        <!-- File Provider برای اشتراک‌گذاری فایل‌ها -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.examapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ==================== METADATA ==================== -->

        <!-- تنظیمات Hilt -->
        <meta-data
            android:name="dagger.hilt.android.internal.projectType"
            android:value="APPLICATION" />

        <!-- پشتیبانی از درگاه پرداخت -->
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <!-- پشتیبانی از Google Play Billing -->
        <meta-data
            android:name="com.google.android.play.billingclient.version"
            android:value="6.0.1" />

        <!-- ==================== OTHER ==================== -->

        <!-- Splash Screen -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>