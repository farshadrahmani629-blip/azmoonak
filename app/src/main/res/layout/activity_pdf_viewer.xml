<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.pdf.PdfViewerActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/gray_light"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="در حال ایجاد گزارش..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/purple_700" />

        <ProgressBar
            android:id="@+id/progressHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/purple_700" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="14sp"
            android:textColor="@color/purple_700"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_light"
        android:padding="12dp"
        android:visibility="gone"
        android:id="@+id/actionButtonsContainer">

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="اشتراک‌گذاری"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="4dp"
            android:layout_marginEnd="4dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ذخیره"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="4dp"
            android:layout_marginHorizontal="4dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="پرینت"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_print"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>

    <!-- WebView for PDF/HTML display -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Regenerate Button -->
    <Button
        android:id="@+id/btnRegenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بازسازی گزارش"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_refresh"
        android:drawablePadding="8dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button" />

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/errorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_error"
            android:contentDescription="خطا"
            android:tint="@color/red"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="خطا در ایجاد گزارش"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="متاسفانه در ایجاد گزارش خطایی رخ داده است. لطفاً دوباره تلاش کنید."
            android:textSize="14sp"
            android:textColor="@color/gray_500"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="تلاش مجدد"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_retry"
            android:drawablePadding="8dp"
            android:paddingHorizontal="24dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

</LinearLayout>